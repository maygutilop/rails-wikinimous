<div class="container">
  <div class="content">
    <h1 class="border-bottom pb-4 mb-4">
      <%= @article.title %>
    </h1>
    <p>
      <%= sanitize(@article.content) %>
    </p>
    <h3>
      <%= link_to edit_article_path(@article), class: 'text-decoration-none' do %>
        <i class="fas fa-pencil-alt mr-3"></i>
      <% end %>
      <%= link_to article_path(@article), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
    </h3>
  </div>
</div>
